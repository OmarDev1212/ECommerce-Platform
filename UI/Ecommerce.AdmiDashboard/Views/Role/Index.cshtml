@{
    Layout = "_Layout";
    ViewData["Title"] = "Roles";
}
@model IEnumerable<RoleViewModel>
<h1>All Roles</h1>
<br />
<br />
<a class="btn btn-primary flex-lg-row-reverse" asp-controller="Role" asp-action="Create">Create Role</a>


@if (Model.Count() > 0)
{

    <table class="table table-hover table-dark table-striped-columns">
        <thead>
            <tr>
                <td> @Html.DisplayNameFor(r => r.Id)</td>
                <td> @Html.DisplayNameFor(r => r.Name)</td>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <partial name="buttons" model="role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No roles found.
    </div>
}
