@{
    Layout = "_Layout";
    ViewData["Title"] = "Types";
}
@model IEnumerable<TypeDto>
<h1>All Product Types</h1>
<br />
<br />
<a class="btn btn-primary flex-lg-row-reverse" asp-controller="Type" asp-action="Create">Create Type</a>


@if (Model.Count() > 0)
{

    <table class="table table-hover table-dark table-striped-columns">
        <thead>
            <tr>
                <td> @Html.DisplayNameFor(r => r.Name)</td>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var Type in Model)
            {
                <tr>
                    <td>@Type.Name</td>
                    <partial name="buttons" model="Type.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" Type="alert">
        No Product Types found.
    </div>
}
