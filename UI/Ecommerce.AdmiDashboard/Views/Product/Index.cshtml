@{
    Layout = "_Layout";
}
@model IEnumerable<ProductViewModel>

<h1>All Products</h1>
<br />
<br />
<a class="btn btn-primary flex-lg-row-reverse" asp-controller="Product" asp-action="Create">Create Product</a>


@if (Model.Count() > 0)
{

    <table class="table table-hover table-dark table-striped-columns">
        <thead>
            <tr>
                <td> @Html.DisplayNameFor(r => r.Name)</td>
                <td> @Html.DisplayNameFor(r => r.Description)</td>
                <td> @Html.DisplayNameFor(r => r.ProductBrand)</td>
                <td> @Html.DisplayNameFor(r => r.ProductType)</td>
                <td> @Html.DisplayNameFor(r => r.Price)</td>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.ProductBrand.Name</td>
                    <td>@product.ProductType.Name</td>
                    <td>@product.Price</td>
                    <partial name="buttons" model="@product.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No Products found.
    </div>
}
